<h1>New game</h1>

<div class="row gap-3">
  <% @letters.each do |letter| %>
    <div class="p-3 bg-primary col d-flex justify-content-center align-items-center">
      <p class="text-light m-0 fs-3"><%= letter %></p>
    </div>
  <% end %>
</div>

<form action="/score" method="POST" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="my-5">
    <label class="form-label">What is the longest word you can find?</label>
    <div class="input-group">
      <input type="text" class="form-control" name="word">
      <button type="submit" class="btn btn-primary">Play</button>
    </div>
  </div>
</form>
